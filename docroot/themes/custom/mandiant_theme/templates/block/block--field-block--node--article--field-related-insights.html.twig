{% set title = elements['#configuration']['label'] %}
<div{{ attributes.addClass('block-bundle-featured_resources').addClass('hide-media').addClass('divided-info') }}>
  {{ title_prefix }}
  {% if title %}
    <h3{{ title_attributes }}>{{ title }}</h3>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    {{ content }}
  {% endblock %}
</div>

<div class="email-now" data-module="EmailNow">
  <form>
    <label for="lan"></label>
    <select class="email-now__select" name="lan" id="lan">
      <option value="{{ drupal_token('site_settings:email--email--field_email_us') }}">US</option>
      <option value="{{ drupal_token('site_settings:email--email--field_email_apac') }}">APAC</option>
      <option value="{{ drupal_token('site_settings:email--email--field_email_emea') }}">EMEA</option>
    </select>
  </form>
  <a class="email-now__link" href="mailto: {{ drupal_token('site_settings:email--email--field_email_us') }}">
    {{ drupal_token('site_settings:email--email--field_email_us') }}
  </a>
</div>